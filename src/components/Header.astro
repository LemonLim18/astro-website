<header class="header" id="myHeader">
  <a href="#" class="logo">
    <img class="logo_full" src={logo_full.src} alt="Logo" />
    <img class="logo_short" src={logo_short.src} alt="Logo" />
  </a>
  <ul>
    <li><a href="#">Home</a></li>
    <li><a href="#converter">PDF/TXT Converter</a></li>
