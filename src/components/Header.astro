---
import logo from '../images/logo.svg';
---

<header class="header">
    <div class="container">
        <div class="logo">
            <a href="/">
                <img src={logo.src} alt="Logo" /> 
            </a>
        </div>
        <nav>
            <ul>
                <li><a href="/">Home</a></li>
                <li><a href="/about">About</a></li>
                <li><a href="/blog">Blog</a></li>
            </ul>
        </nav>
    </div>
</header>

<style>
  .header {
    height: 70px;
    background: var(--color-primary);
  }
  
  .header .container {
    /* take up the 100% height of the parent element */
    height: 100%;
    /* setting up a flex will make the layout easy to be aligned and distributed */
    display: flex;
    /* vertically center */
    align-items: center;
    /* push the items along the horizontal axis as far apart as possible */
    justify-content: space-between;
    padding: 0 20px;
  }
  
  .header img {
    height: 35px;
    vertical-align: middle;
  }
  
  .header nav ul {
    display: flex;
  }
  
  .header nav ul li {
    padding: 0 10px;
  }
  
  .header nav ul li a {
    color: #fff;
  }
  </style>
