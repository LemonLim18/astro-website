    <li><a href="#product">Products</a></li>
  </ul>
</header>

<section class="banner">
  <img src={astronaut.src} alt="banner">
</section>


<!-- CSS codes -->
<style>
  html {
    scroll-behavior: smooth;
  }
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family: 'Poppins', sans-serif;
  }

  body {
    background: #000;
    min-height: 200vh;
  }
  .header {
    position: fixed;
    top: 0;
    left: 0;
    height: 95px;
    width: 100%;
    padding: 0px 30px;
    background: white;
    display: flex;
    justify-content: space-between;
    align-items: center;
    z-index: 100;
    transition: 0.6s;
  }

  /* Textify logo */
  .logo img{
    height: 130px;
  }

  .logo_short {
    display: none;
    
  }
  @media (max-width:715px) {
     .logo_short {
        
        display: block;
     }
     .logo_full {
        display: none;
     }
  }

  header ul {
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  header ul li {
    position: relative;
    list-style: none;
    display: flex;
    text-align: center;
    white-space: normal;
    line-height: 1.5;
  }

  header ul li a {
    position: relative;
    margin: 0 15px;
    text-decoration: none;
    color: #black;
    letter-spacing: 2px;
    font-weight: 500px;
    transition: 0.6s;
  }

  .banner {
    position: relative;
    width: 100%;
    height: 90vh;
    background-size: cover;
  }
  .banner img {
    position: absolute;
    top: 100px;
    left: 0;
    width: 100%;
    height: 80vh;
    object-fit: cover;
  }

  @media (min-width:1150px) {
    .banner img {
      width: 100%;
      top: 90px;
    }

    .header {
      position: fixed;
      top: 0;
      left: 0;
      height: 90px;
      width: 100%;
      padding: 0px 30px;
      background: white;
      display: flex;
      justify-content: space-between;
      align-items: center;
      z-index: 100;
      transition: 0.6s;
    }

  }

  /* Makes the header stick at the top while scroll */
  .sticky {
    position: fixed;
    top: 0;
    width: 100%;
    background-color: black;
    /* testing */
    transition: top 0.3s;
  }
  
</style>


<!-- Javascript code -->
<script> 
  window.onscroll = function() {myFunction()};

  var header = document.getElementById("myHeader");
  var sticky = header.offsetTop;
  var prevScrollPos = window.pageYOffset; // add a variable to store the previous scroll position
  
  function myFunction() {
    var currentScrollPos = window.pageYOffset; // get the current scroll position
    if (prevScrollPos < currentScrollPos) {
      // if the current scroll position is greater than the previous one, hide the header
      header.style.top = "-100px";
    } else {
      // if the current scroll position is less than the previous one, show the header
      header.style.top = "0";
    }
    prevScrollPos = currentScrollPos; // update the previous scroll position
  }


  //menu
  function menuFunction() {
    var x = document.getElementById("myLinks");
    if (x.style.display === "block") {
      x.style.display = "none";
    } else {
      x.style.display = "block";
    }
  }
</script>
